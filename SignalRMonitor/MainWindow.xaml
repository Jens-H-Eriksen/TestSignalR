<Window x:Class="SignalRMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SignalRMonitor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <ListBox x:Name="ReceiveListBox"  HorizontalAlignment="Left" Height="378" Margin="40,10,0,0" VerticalAlignment="Top" Width="385"/>

        <GroupBox Header="Invoke Broadcast" HorizontalAlignment="Left" Height="120" Margin="457,253,0,0" VerticalAlignment="Top" Width="299">
            <Canvas>
                <TextBox x:Name="SendTextBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="255" Canvas.Left="22" Canvas.Top="28"/>
                <Button x:Name="SendButton"  Content="Send" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="104" Height="32" Click="SendButton_Click" Canvas.Left="173" Canvas.Top="56"/>
            </Canvas>
        </GroupBox>


        <GroupBox Header="Broadcasting" HorizontalAlignment="Left" Height="76" Margin="457,10,0,0" VerticalAlignment="Top" Width="299">
            <Label  x:Name="WatchdogLabel" Content="WatchDog: " Height="32" Margin="110,8,0,9"/>
        </GroupBox>

        <GroupBox Header="Get" HorizontalAlignment="Left" Height="103" Margin="461,123,0,0" VerticalAlignment="Top" Width="295" RenderTransformOrigin="0.5,0.5">
            <GroupBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.474"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-1.117"/>
                </TransformGroup>
            </GroupBox.RenderTransform>
            <Button x:Name="MakeNumberButton"  Content="Make a number" HorizontalAlignment="Left" VerticalAlignment="Top" Width="104" Height="32" Click="MakeNumberButton_Click" Margin="172,41,0,0"/>
        </GroupBox>
    </Grid>
</Window>
